@model List<WaterBillingDB.sp_DrCrNote_SelectWhere_Result>

@{
    Layout = "";

}

<div class="col-md-12">
    <div class="form-group">
        <div class="box-header with-border">
            <h3 class="box-title text-blue text-bold"> Details</h3>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">

                <div class="box-body">
                    <table class="table table-bordered table-hover" style="width:100%" border="1px">
                        <thead>
                            <tr>
                                <th>Serial Number</th>
                                <th>Note Date</th>
                                <th>Consumer Name</th>
                                <th>Amount</th>
                                <th>Order No</th>
                                <th>Order Date</th>
                                <th>Print Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < @Model.Count(); i++)
                            {
                                <tr>
                                    <td>@Model[i].SerialNo.ToString().PadLeft(6,'0')</td>
                                    <td>@Model[i].NoteDate</td>
                                    <td>@Model[i].ConsumerName</td>
                                    <td align="right">@Model[i].Amount</td>
                                    <td>@Model[i].OrderNo</td>
                                    <td>@Model[i].OrderDate</td>
                                    <td align="center">
                                        <a href="#">
                                            <i class="fa fa-print"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    jQuery(document).ready(function () {
        debugger;
    });
</script>


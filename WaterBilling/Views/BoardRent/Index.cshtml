        toastr["success"]('@TempData["Success"]');
    else if ('@TempData["Warning"]' != '')
        toastr["warning"]('@TempData["Warning"]');*@

        }

    function MessagePrintOnFailed() {
        //debugger;
        toastr["warning"]('No Board Rent update.');
        $("#ajaxLoader").hide();
    }

</script>
